<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase">Lista de PERSONAS</h3>
        {{#if personas}}
        <div class="col-md-12">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{lastname}}</td>
                        <td>{{age}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/delete/{{id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">REGISTRO DE PERSONAS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Crear Persona</h3>
            </div>
            <div class="card-body">
                <p>PRESIONA ESTE BOTON</p>
                <a href="#" class="btn btn-primary">Ir a CREAR</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
